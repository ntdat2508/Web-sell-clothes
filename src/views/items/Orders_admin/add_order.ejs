<div class="panel-body">
    <form method="post" id="MyForm" action="/add_ord">
        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Mã hoá đơn: </label>
            <input type="text" class="form-control" name="name" />
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Trạng thái: </label>
            <select class="form-control" name="status" required>
                <option selected>--Chọn trạng thái--</option>
                <option value="Đang chuẩn bị">Đang chuẩn bị</option>
                <option value="Đang xử lý">Đang xử lý</option>
                <option value="Đang giao">Đang giao</option>
                <option value="Đã giao">Đã giao</option>
                <option value="Đã huỷ">Đã huỷ</option>
            </select>
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Khách hàng: </label>
            <input type="text" id="price" class="form-control" name="costumer" />
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Địa chỉ: </label>
            <input type="text" class="form-control" name="address" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Số điện thoại: </label>
            <input type="text" class="form-control" name="phone" />
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Ngày đặt: </label>
            <input type="date" class="form-control" name="date" />
        </div>

        <div class="form-group input-group mt-3">
            <button type="submit" class="btn btn-outline-dark" style="margin-left: 0px !important">Tạo hoá đơn</button>
        </div>
    </form>
</div>
