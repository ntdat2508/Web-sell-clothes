<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content">
            <!-- ============================================================== -->
            <!-- pageheader  -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <div class="page-breadcrumb">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Quản lý đơn hàng</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ecommerce-widget">
                <div class="row">
                    <!-- recent orders  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-6 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table text-center">
                                        <thead class="bg-light">
                                            <tr class="border-0">
                                                <th class="border-0">STT</th>
                                                <th class="border-0">Mã đơn hàng</th>
                                                <th class="border-0">Trạng thái</th>
                                                <th class="border-0">Khách hàng</th>
                                                <th class="border-0">Địa chỉ</th>
                                                <th class="border-0">Ngày đặt</th>
                                                <th class="border-0">Số điện thoại</th>
                                                <th class="border-0">Hành động</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let p of list) {%>
                                            <tr>
                                                <td><%= p.id %></td>
                                                <td><%= p.name %></td>
                                                <td><%= p.status %></td>
                                                <td><%= p.costumer %></td>
                                                <td><%= p.address %></td>
                                                <td>
                                                    <%= p.date.toLocaleDateString('vi-VN', {day: 'numeric', month:
                                                    'numeric', year: 'numeric'}) %>
                                                </td>
                                                <td><%= p.phone %></td>
                                                <td>
                                                    <a
                                                        href="/edit_order/<%= p.id %>"
                                                        class="btn btn-outline-dark"
                                                        style="margin-left: 0px !important"
                                                        id="save_btn"
                                                    >
                                                        Xác nhận</a
                                                    >
                                                    <a href="/ord_detail/<%= p.id %>" class="btn btn-outline-danger"
                                                        >Chi tiết</a
                                                    >
                                                    <a href="/delete_ord/<%= p.id %> " class="btn btn-outline-success"
                                                        >Xóa</a
                                                    >
                                                </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
