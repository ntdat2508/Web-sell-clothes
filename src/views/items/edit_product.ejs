<div class="panel-body">
    <form method="post" id="MyForm" action="/edit/<%= item.id %>" enctype="multipart/form-data">
        <div class="input-group form-group">
            <label for="file" class="input-group-text">Ảnh sản phẩm: </label>
              <input
                name="image"
                type="file"
                id="file"
                class="form-control ps-0 form-control-line"
                required
              />
          </div>
        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Tên sản phẩm: </label>
            <input type="text" class="form-control" name="name" value="<%= item.name %>"/>
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Tên danh mục: </label>
            <select class="form-control" name="category">
                <% for (let category of categories) { %>
                    <option value="<%= category.id %>" <%= item.Category.id == category.id ? 'selected' : '' %>><%= category.name %></option>
                <% } %>
            </select>
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Giá: </label>
            <input type="text" id="price" class="form-control" name="price" value="<%= item.price %>"/>
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Số lượng: </label>
            <input type="text" class="form-control" name="quantity" value="<%= item.quantity %>"/>
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="form-control">Mô tả: </label>
            <input type="text" class="form-control" name="description" value="<%= item.description %>"/>
        </div>

        <div class="form-group input-group mt-3">
            <button type="submit" class="btn btn-outline-dark" style="margin-left: 0px !important">
                Sửa sản phẩm
            </button>
        </div>
    </form>
</div>